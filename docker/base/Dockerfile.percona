ARG BASE_IMAGE=vitess/bootstrap:percona
FROM $BASE_IMAGE

# Re-copy sources from working tree
USER root
COPY . /vt/src/vitess.io/vitess

# Fix permissions
RUN chown -R vitess:vitess /vt
USER vitess
# Required by e2e test dependencies e.g. test/environment.py.
ENV USER vitess

# Build Vitess
RUN make build
